<%- include('header') -%>
    <div class="date-div"><h1><%= weekday %></h1></div>
    <div class="todo-div">
        <ul class="list-group">
            <% for (let i = 0; i < tasks.length; i++) { %>
            <li class="list-group-item">
                <form action="/update" method="post">
                    
                    <% if (tasks[i]['complete'] === true) { %>
                        <input onChange="this.form.submit()" class="form-check-input" type="checkbox" value="true" id="task<%=i%>" name="checked" checked>
                     <%}else{%>
                        <input onChange="this.form.submit()" class="form-check-input" type="checkbox" value="<%=i%>" id="task<%=i%>" name="checked">
                    <%}%>
                    <input type="hidden" value="<%=i%>" name="index">
                    <input type="hidden" value="<%=tasks[i]['_id']%>" name="task_id">
                    <input type="hidden" value="<%= weekday %>" name="date">

                    <label class="form-check-label stretched-link" for="task<%=i%>">

                    <% if (tasks[i]['complete'] === true) { %>
                           <h3 style="text-decoration: line-through;"><%=tasks[i]['task']%></h3>
                        <%}else{%>
                               <h3><%=tasks[i]['task']%></h3>
                            <%}%>
                    </label>
                </form>
            </li>
        <% } %>
            <li class="list-group-item bottom-form">
                <form action="/" method="post">
                    <input name="task-input" type="text" class="form-control" placeholder="New Item" aria-label="" aria-describedby="button-addon2" autocomplete="off" required>
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">+</button>
                </form>
            </li>
        </ul>
    </div>
    <%- include('footer') -%>